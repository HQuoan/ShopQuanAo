@model PagedList.PagedList<ShopQuanAo.Models.ProductImage>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Ảnh sản phẩm </title>
</head>
<body>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Hình ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Tiêu đề</th>
                    <th>Danh mục</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Ngày tạo</th>
                    <th>Hiển thị</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var i = ViewBag.Page;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>

                            <td> <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-productid="@item.ProductID">Insert</button></td>
                            <td><img class="imgproduct" data-id="@item.ProductID" src="@item.ProductImages.FirstOrDefault(x=>x.isDefault).Image" width="60" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Title</td>
                            <td>@item.Category.CatName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td>@item.CreateDate</td>
                            <td>@item.Status</td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-sm btn-primary" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-sm btn-danger delete-link", onclick = "return confirm('Bạn có chắc muốn xóa?');" })
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Không có bản ghi nào</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 " style="text-align: center">  @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
            <div class="col-md-3"></div>
        </div>

    </div>
</body>
</html>
